with open("C:/Users/sunzi/Desktop/Project 2/genome_dna.txt") as f:
    genome = f.readline()
    
exon1 = genome[0:63]
intron1 = genome[64:]
print(exon1)

print("The length of genome is",len(genome))
print("The length of exon1 is",len(exon1), ", and the length of intron is",len(intron1))

with open("C:/Users/sunzi/Desktop/Project 2/coding.txt",'a')as file:
    file.write(exon1)
print(intron1)
